<Application
    x:Class="FoodHelperApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodHelperApp"
    RequestedTheme="Light">
    
    <Application.Resources>
        <Style x:Key="Burned" TargetType="Image">
            <Setter Property="Source" Value="Icons/Burned.png"/>
            <Setter Property="MaxHeight" Value="160"/>
            <Setter Property="MaxWidth" Value="160"/>
        </Style>
        <Style x:Key="Gained" TargetType="Image">
            <Setter Property="Source" Value="Icons/Gained.png"/>
            <Setter Property="MaxHeight" Value="219"/>
            <Setter Property="MaxWidth" Value="219"/>
        </Style>
        <Style x:Key="Proteins" TargetType="Image">
            <Setter Property="Source" Value="Icons/Proteins.png"/>
            <Setter Property="MaxHeight" Value="101"/>
            <Setter Property="MaxWidth" Value="199"/>
        </Style>
        <Style x:Key="Fats" TargetType="Image">
            <Setter Property="Source" Value="Icons/Fats.png"/>
            <Setter Property="MaxHeight" Value="174"/>
            <Setter Property="MaxWidth" Value="122"/>
        </Style>
        <Style x:Key="Carbs" TargetType="Image">
            <Setter Property="Source" Value="Icons/Carbs.png"/>
            <Setter Property="MaxHeight" Value="149"/>
            <Setter Property="MaxWidth" Value="122"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#323232"/>
            <Setter Property="Background" Value="#7DC3FD"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Height" Value="48"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#323232"/>
        </Style>
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Background" Value="#00FFFFFF"/>
            <Setter Property="Foreground" Value="#323232"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Content" Value="r"/>
            <Setter Property="CornerRadius" Value="100"/>
        </Style>
    </Application.Resources>
</Application>
