<Page
    x:Class="FoodHelperApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodHelperApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="1024"
    Width="1440"
    Background="#FFFFFF"
    HorizontalAlignment="Left"
    VerticalAlignment="Top">

    <Page.Resources>
        <Style x:Key="WhiteBlock" TargetType="Grid">
            <Setter Property="Height" Value="335"/>
            <Setter Property="Width" Value="369"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        <Style x:Key="GrayBlock" TargetType="Grid">
            <Setter Property="Background" Value="#EDEDED"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Page.Resources>

    <Grid 
        x:Name="MainGrid"
        Background="White"
        Margin="50,55,50,75"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="83"/>
            <RowDefinition Height="763"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="144"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="569"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ExitButton"
                    Margin="0,0,0,0"
                    Grid.Column="0"
                    Content="Выйти" 
                    Width="144" 
                    Click="ExitButton_Click"/>
            <TextBlock x:Name="LoginText"
                       Grid.Column="1"
                       Text="Login" 
                       FontSize="40"
                       HorizontalAlignment="Center" 
                       Height="48" 
                       Width="600" 
                       TextAlignment="Center"/>
            <Button x:Name="AddIngredientButton" 
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Content="Добавить ингредиет +"
                    Width="288" 
                    Click="AddIngredientButton_Click"/>
            <Button x:Name="AddRecipeButton"
                    Grid.Column="2" 
                    HorizontalAlignment="Right"
                    Content="Добавить рецепт +"
                    Width="240" 
                    Click="AddRecipeButton_Click"/>
        </Grid>

        <Grid x:Name="Blocks" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="467"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="841"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="370"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="370"/>
                </Grid.RowDefinitions>
                <Grid Style="{StaticResource GrayBlock}" Grid.Row="0" Height="370" Width="467">
                    <Button x:Name="AddAteToday"
                            Content="Сегодня съедено +"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Width="400"
                            Click="AddAteToday_Click"/>
                    <TextBlock Text="Сегодня вы съели" 
                               Margin="0,87,0,0" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top" 
                               Width="300"/>
                    <Grid Margin="0,135,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <ListView x:Name="AteToday" 
                                  Grid.Column="1"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Top"
                                  Width="300" 
                                  HorizontalContentAlignment="Left">
                        </ListView>
                        <Button x:Name="ArrowLeft" 
                                Grid.Column="0"
                                HorizontalAlignment="Center" 
                                Height="200" 
                                Click="PreviousButton_Click" 
                                Background="#EDEDED"
                                FontFamily="Marlett"
                                FontSize="25"
                                Content="3"
                                CornerRadius="0,0,0,0"
                                Width="50"
                                Foreground="#7F808080"/>
                        <Button x:Name="ArrowRight"
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Height="200"
                                Click="NextButton_Click"
                                Background="#EDEDED"
                                FontFamily="Marlett"
                                FontSize="25"
                                Content="4"
                                CornerRadius="0,0,0,0"
                                Width="50"
                                Foreground="#7F808080"/>
                    </Grid>
                </Grid>
                <Grid Style="{StaticResource GrayBlock}" Grid.Row="2" Height="370" Width="467">
                    <Button x:Name="AddBurnedToday"
                            Content="Сегодня сожжено +"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Width="400"
                            Click="AddBurnedToday_Click"/>
                    <TextBlock Text="Сегодня вы сожгли" Margin="0,87,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Burned}" Margin="0,80,0,0"/>
                    <TextBlock x:Name="BurnedToday" Margin="24" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>    
                </Grid>
            </Grid>
            <Grid Style="{StaticResource GrayBlock}" Grid.Column="2" Height="763" Width="841">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Калории" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Gained}"/>
                    <TextBlock x:Name="Gained" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="Белки"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Proteins}"/>
                    <TextBlock x:Name="Proteins" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Жиры" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Fats}"/>
                    <TextBlock x:Name="Fats" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="Углеводы" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Carbs}"/>
                    <TextBlock x:Name="Carbs" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
