<Page
    x:Class="FoodHelperApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodHelperApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FFFFFF"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"  MinHeight="600" MinWidth="1100" Height="915" Width="1481">

    <Page.Resources>
        <Style x:Key="WhiteBlock" TargetType="Grid">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
        </Style>
        <Style x:Key="GrayBlock" TargetType="Grid">
            <Setter Property="Background" Value="#EDEDED"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Page.Resources>

    <Grid 
        x:Name="MainGrid"
        Background="White"
        Margin="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition MinHeight="10" MaxHeight="83"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="144"/>
                <ColumnDefinition MinWidth="100"/>
                <ColumnDefinition Width="3*" MinWidth="422"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ExitButton"
                    Margin="0,0,0,0"
                    Grid.Column="0"
                    Content="Выйти" 
                    HorizontalAlignment="Stretch"
                    Click="ExitButton_Click"/>
            <TextBlock x:Name="LoginText"
                       Grid.Column="1"
                       Text="Login" 
                       FontSize="40"
                       HorizontalAlignment="Stretch" 
                       Height="48" 
                       TextAlignment="Center"/>
            <Button x:Name="AddIngredientButton" 
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Content="Добавить ингредиет +"
                    Width="288" 
                    Margin="0,0,250,0"
                    Click="AddIngredientButton_Click"/>
            <Button x:Name="AddRecipeButton"
                    Grid.Column="2" 
                    HorizontalAlignment="Right"
                    Content="Добавить рецепт +"
                    Width="240" 
                    Click="AddRecipeButton_Click"/>
        </Grid>

        <Grid x:Name="Blocks" Grid.Row="2" Height="Auto" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="467*"/>
                    <RowDefinition Height="23*"/>
                    <RowDefinition Height="467*"/>
                </Grid.RowDefinitions>
                <Grid Style="{StaticResource GrayBlock}" HorizontalAlignment="Stretch">
                    <Button x:Name="AddAteToday"
                            Content="Сегодня съедено +"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Top"
                            Click="AddAteToday_Click"/>
                    <TextBlock Text="Сегодня вы съели" 
                               Margin="0,60,0,0" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"/>
                    <Grid Margin="0,135,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <GridView x:Name="AteTodayGridView" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                        </GridView>
                        <Button x:Name="ArrowLeft" 
                                Grid.Column="0"
                                HorizontalAlignment="Center" 
                                Click="PreviousButton_Click" 
                                Background="#EDEDED"
                                FontFamily="Marlett"
                                FontSize="25"
                                Content="3"
                                CornerRadius="0,0,0,0"
                                Foreground="#7F808080"/>
                        <Button x:Name="ArrowRight"
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Click="NextButton_Click"
                                Background="#EDEDED"
                                FontFamily="Marlett"
                                FontSize="25"
                                Content="4"
                                CornerRadius="0,0,0,0"
                                Foreground="#7F808080"/>
                    </Grid>
                </Grid>
                <Grid Style="{StaticResource GrayBlock}" Grid.Row="2">
                    <Button x:Name="AddBurnedToday"
                            Content="Сегодня сожжено +"

                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Click="AddBurnedToday_Click"/>

                    <Grid Margin="0,48,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="48"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Сегодня вы сожгли" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Image Style="{StaticResource Burned}" Grid.Row="1"/>
                        <TextBlock x:Name="BurnedToday" Grid.Row="2" Text="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Style="{StaticResource GrayBlock}" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="0" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Калории" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Gained}" Grid.Row="1"/>
                    <TextBlock x:Name="Gained" Grid.Row="2" Text="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Белки" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Proteins}" Grid.Row="1"/>
                    <TextBlock x:Name="Proteins" Grid.Row="2" Text="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="0" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Жиры" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Fats}" Grid.Row="1"/>
                    <TextBlock x:Name="Fats" Text="100" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
                <Grid Style="{StaticResource WhiteBlock}" Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Углеводы" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Image Style="{StaticResource Carbs}" Grid.Row="1"/>
                    <TextBlock x:Name="Carbs" Grid.Row="2" Text="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
