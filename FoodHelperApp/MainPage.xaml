<Page
    x:Class="FoodHelperApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodHelperApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="1024"
    Width="1440"
    Background="#FFFFFF"
    HorizontalAlignment="Left"
    VerticalAlignment="Top">

    <Page.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#323232"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#323232"/>
            <Setter Property="Background" Value="#7DC3FD"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="CornerRadius" Value="30,30,30,30"/>
            <Setter Property="Height" Value="48"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Foreground" Value="#323232"/>
            <Setter Property="FontSize" Value="32"/>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="RadiusX" Value="30"/>
            <Setter Property="RadiusY" Value="30"/>
        </Style>
        <Style x:Key="WhiteRectangle" TargetType="Rectangle">
            <Setter Property="Height" Value="335"/>
            <Setter Property="Width" Value="369"/>
            <Setter Property="Fill"  Value="#FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="RadiusX" Value="30"/>
            <Setter Property="RadiusY" Value="30"/>
        </Style>
    </Page.Resources>

    <Grid 
        x:Name="MainGrid"
        Background="White"
        Margin="50,55,50,75"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="83"/>
            <RowDefinition Height="763"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="144"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="569"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ExitButton"
                Margin="0,0,0,0"
                Grid.Column="0" Grid.Row="0"
                Content="Выйти" 
                Width="144" 
                Click="ExitButton_Click"/>
            <TextBlock 
                x:Name="LoginText"
                Grid.Column="1"
                Text="Login" 
                FontSize="40"
                HorizontalAlignment="Center" 
                Height="48" Width="600" 
                TextAlignment="Center"/>
            <Button 
                x:Name="AddIngredientButton" 
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Left"
                Content="Добавить ингредиет +"
                Width="288" 
                Click="AddIngredientButton_Click"/>
            <Button 
                x:Name="AddRecipeButton"
                Grid.Column="2" 
                Grid.Row="0" 
                HorizontalAlignment="Right"
                Content="Добавить рецепт +"
                Width="240" 
                Click="AddRecipeButton_Click"/>
        </Grid>

        <Grid x:Name="Blocks" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="467"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="841"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="370"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="370"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Height="370" Width="467" Fill="#EDEDED"/>
                <Button 
                    x:Name="AddAteToday"
                    Content="Сегодня съедено +"
                    Grid.Row="0" 
                    Margin="16, 24" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Width="435"
                    Click="AddAteToday_Click"/>
                <TextBlock 
                    Text="Сегодня вы съели" 
                    Grid.Row="0" 
                    Margin="0,87,0,0" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" 
                    Width="300"/>
                <Grid 
                    Grid.Row="0"
                    Margin="0,135,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ListView 
                        x:Name="AteToday" 
                        Grid.Column="1"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Width="300" 
                        HorizontalContentAlignment="Left">
                    </ListView>
                    <Button 
                        x:Name="ArrowLeft" 
                        Grid.Column="0"
                        HorizontalAlignment="Center" 
                        Height="200" 
                        Click="PreviousButton_Click" 
                        Background="#EDEDED"
                        FontFamily="Marlett"
                        FontSize="25"
                        Content="3"
                        CornerRadius="0,0,0,0"
                        Width="50"
                        Foreground="#7F808080"/>
                    <Button 
                        x:Name="ArrowRight"                            
                        Grid.Column="2"                           
                        HorizontalAlignment="Center"                            
                        Height="200"                             
                        Click="NextButton_Click"                           
                        Background="#EDEDED"                           
                        FontFamily="Marlett"                          
                        FontSize="25"                           
                        Content="4"                                                 
                        CornerRadius="0,0,0,0"                          
                        Width="50"                           
                        Foreground="#7F808080"/>
                </Grid>

                <Rectangle 
                    Grid.Row="2"
                    Height="370" 
                    Width="467" 
                    Fill="#EDEDED"/>
                <Button 
                    x:Name="AddBurnedToday"                        
                    Content="Сегодня сожжено +"                         
                    Grid.Row="2"                       
                    Margin="16, 24"                         
                    HorizontalAlignment="Center"                         
                    VerticalAlignment="Top"                         
                    Height="48" 
                    Width="435"                         
                    Click="AddBurnedToday_Click"/>
                <TextBlock 
                    Text="Сегодня вы сожгли"   
                    Grid.Row="2"
                    Margin="0,87,0,0" 
                    HorizontalAlignment="Center"                            
                    VerticalAlignment="Top"/>
                <Image 
                    Source="icons/Burned.png" 
                    Grid.Row="2"
                    Margin="0,140,0,0" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Height="160" 
                    Width="160"/>
                <TextBlock 
                    x:Name="BurnedToday" 
                    Text="0" 
                    Grid.Row="2"
                    Margin="24"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"/>

            </Grid>
            <Rectangle 
                Grid.Column="2" 
                Height="763"
                Width="841"
                Fill="#EDEDED"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Rectangle Style="{StaticResource WhiteRectangle}"
                    Grid.Column="0" 
                    Grid.Row="0"/>
                <Rectangle Style="{StaticResource WhiteRectangle}"
                    Grid.Column="1"
                    Grid.Row="0"/>
                <Rectangle Style="{StaticResource WhiteRectangle}"
                    Grid.Column="0" 
                    Grid.Row="1"/>
                <Rectangle Style="{StaticResource WhiteRectangle}"
                    Grid.Column="1"
                    Grid.Row="1" />

                <TextBlock 
                    Text="Калории"                            
                    Grid.Column="0"                           
                    Grid.Row="0"                           
                    Margin="40"                            
                    HorizontalAlignment="Center"                            
                    VerticalAlignment="Top"/>
                <Image 
                    Source="icons/Gained.png"                        
                    Grid.Column="0"                        
                    Grid.Row="0"                        
                    HorizontalAlignment="Center"                        
                    VerticalAlignment="Center"                        
                    Height="219"                      
                    Width="219"/>
                <TextBlock 
                    x:Name="Gained"
                    Text="0"
                    Grid.Column="0" 
                    Grid.Row="0"
                    Margin="40" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"/>

                <TextBlock 
                    Text="Белки" 
                    Grid.Column="1" 
                    Grid.Row="0" 
                    Margin="40"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"/>
                <Image 
                    Source="icons/Proteins.png"
                    Grid.Column="1" 
                    Grid.Row="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Height="101"
                    Width="199"/>
                <TextBlock 
                    x:Name="Proteins"
                    Text="0"
                    Grid.Column="1" 
                    Grid.Row="0" 
                    Margin="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"/>

                <TextBlock 
                    Text="Жиры" 
                    Grid.Column="0"
                    Grid.Row="1" 
                    Margin="40" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>
                <Image 
                    Source="icons/Fats.png"
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="174"
                    Width="122"/>
                <TextBlock 
                    x:Name="Fats" 
                    Text="0" 
                    Grid.Column="0" 
                    Grid.Row="1" 
                    Margin="40" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"/>

                <TextBlock 
                    Text="Углеводы" 
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="40" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>
                <Image 
                    Source="icons/Carbs.png"
                    Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="149" 
                    Width="122"/>
                <TextBlock 
                    x:Name="Carbs"
                    Text="0"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
