<Page
    x:Class="FoodHelperApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodHelperApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="1024"
    Width="1440"
    Background="#FFFFFF"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    >

    <Grid x:Name="MainGrid" Background="White" Margin="50,55,50,75" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="83"/>
            <RowDefinition Height="763"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="651"/>
                <ColumnDefinition Width="569"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ExitButton" Grid.Column="0" Content="Выйти" FontFamily="Inter" FontSize="20" Foreground="#323232" Background="#7DC3FD" Grid.Row="0" Height="48" Width="120" CornerRadius="30,30,30,30" Click="ExitButton_Click"/>
            <TextBlock x:Name="LoginText" Grid.Column="1" Text="Login" FontFamily="Inter" FontSize="40" Foreground="#323232" HorizontalAlignment="Center" Height="48" Width="600" TextAlignment="Center"/>
            <Button x:Name="AddIngredientButton" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Content="Добавить ингредиет +" FontFamily="Inter" FontSize="20" Foreground="#323232" Background="#7DC3FD" Height="48" Width="288" CornerRadius="30,30,30,30" Click="AddIngredientButton_Click"/>
            <Button x:Name="AddRecipeButton"    Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" Content="Добавить рецепт +" FontFamily="Inter" FontSize="20" Foreground="#323232" Background="#7DC3FD" Height="48" Width="240" CornerRadius="30,30,30,30" Click="AddRecipeButton_Click"/>
        </Grid>

        <Grid x:Name="Blocks" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="467"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="841"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="370"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="370"/>
                </Grid.RowDefinitions>
                <Rectangle HorizontalAlignment="Center" Grid.Row="0" Height="370" Width="467" Fill="#EDEDED" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
                <Button x:Name="AddAteToday" Content="Сегодня съедено +" Grid.Row="0" Margin="16, 24" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="20" Foreground="#323232" Background="#7DC3FD" Height="48" Width="435" CornerRadius="30,30,30,30" Click="AddAteToday_Click"/>
                <TextBlock Text="Сегодня вы съели" Grid.Row="0" Margin="0,87,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>



                <Rectangle HorizontalAlignment="Center" Grid.Row="2" Height="370" Width="467" Fill="#EDEDED" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
                <Button x:Name="AddBurnedToday" Content="Сегодня сожжено +" Grid.Row="2" Margin="16, 24" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="20" Foreground="#323232" Background="#7DC3FD" Height="48" Width="435" CornerRadius="30,30,30,30" Click="AddBurnedToday_Click"/>
                <TextBlock Text="Сегодня вы сожгли" Grid.Row="2" Margin="0,87,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
                <Image Source="icons/Burned.png" Grid.Row="2" Margin="0,140,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="160" Width="160"/>
                <TextBlock x:Name="BurnedToday" Text="nnn" Grid.Row="2" Margin="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Inter" FontSize="32" Foreground="#323232"/>

            </Grid>
            <Rectangle HorizontalAlignment="Center" Grid.Column="2" Height="763" Width="841" Fill="#EDEDED" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Rectangle HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Height="335" Width="369" Fill="#FFFFFF" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
                <Rectangle HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" Height="335" Width="369" Fill="#FFFFFF" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
                <Rectangle HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Height="335" Width="369" Fill="#FFFFFF" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>
                <Rectangle HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Height="335" Width="369" Fill="#FFFFFF" VerticalAlignment="Center" RadiusX="30" RadiusY="30"/>

                <TextBlock Text="Калории" Grid.Column="0" Grid.Row="0" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
                <Image Source="icons/Gained.png" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="219" Width="219"/>
                <TextBlock x:Name="Gained" Text="nnn" Grid.Column="0" Grid.Row="0" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Inter" FontSize="32" Foreground="#323232"/>

                <TextBlock Text="Белки" Grid.Column="1" Grid.Row="0" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
                <Image Source="icons/Proteins.png" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="101" Width="199"/>
                <TextBlock x:Name="Proteins" Text="nnn" Grid.Column="1" Grid.Row="0" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Inter" FontSize="32" Foreground="#323232"/>

                <TextBlock Text="Жиры" Grid.Column="0" Grid.Row="1" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
                <Image Source="icons/Fats.png" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="174" Width="122"/>
                <TextBlock x:Name="Fats" Text="nnn" Grid.Column="0" Grid.Row="1" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Inter" FontSize="32" Foreground="#323232"/>

                <TextBlock Text="Углеводы" Grid.Column="1" Grid.Row="1" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
                <Image Source="icons/Carbs.png" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="149" Width="122"/>
                <TextBlock x:Name="Carbs" Text="nnn" Grid.Column="1" Grid.Row="1" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Inter" FontSize="32" Foreground="#323232"/>
            </Grid>

        </Grid>



    </Grid>
</Page>
